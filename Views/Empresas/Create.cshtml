@{
    ViewData["Title"] = "Adicionar";
}
@model CnpjMvc.Models.EmpresasViewModel;

<h2>Adicionar Empresa</h2>
@if (@TempData["Mensagem"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Mensagem"]</div>
}
<!--Configuração para exibir mensagem de erro -->
@if (@TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]</div>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr/>
        <div class="form-group">
            <label class="control-label col-md-2">Nome:</label>
            <div class="col-md-6">
                 @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">CNPJ:</label>
            <div class="col-md-6">
                 @Html.EditorFor(model => model.CNPJ, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">E-mail:</label>
            <div class="col-md-6">
                 @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Telefone:</label>            
            <div class="col-md-6">
                 @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>    
    </div>

    <br>
    <div class="form-group">
            <div class="col-md-offset-2 col-md-6" >
            <input type="submit" value="Salvar" class="btn btn-primary"/>
            </div>
    </div>
}
<div>
    @Html.ActionLink("Retornar", "Index")
</div>